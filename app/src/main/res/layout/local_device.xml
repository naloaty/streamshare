<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/corner_radius"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/local_device_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:foreground="@drawable/ripple_white_rectangle"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:background="@color/colorBlueLight"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="28dp"
            android:paddingEnd="28dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <TextView
                android:textColor="@color/colorWhiteBlueTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_localDevice"
                android:textSize="20sp" />

            <!--TextView
                android:id="@+id/local_device_albums"
                android:textColor="@color/colorWhiteBlueTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_defaultValue"
                android:textSize="14sp"/-->

            <!--TextView
                android:id="@+id/local_device_photos"
                android:textColor="@color/colorWhiteBlueTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_defaultValue"
                android:textSize="14sp"/-->

            <!--TextView
                android:id="@+id/local_device_videos"
                android:textColor="@color/colorWhiteBlueTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_defaultValue"
                android:textSize="14sp"/-->

        </LinearLayout>

        <LinearLayout
            android:background="@color/colorBlue"
            android:layout_weight="2.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_home_24dp"
                android:tint="@color/colorWhiteBlueTheme"/>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>